{
    "name": "keybound-server",
    "version": "0.0.1",
    "description": "API for keybound web app",
    "main": "index.js",
    "scripts": {
        "build-ts": "tsc",
        "start": "npm run serve",
        "serve": "node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "mockdata": "ts-node src/mockdata.ts",
        "test": "NODE_ENV=test jest --watch --testPathPattern=src/tests",
        "postinstall": "npm run build-ts",
        "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
        "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed"
    },
    "devDependencies": {
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/faker": "^5.5.3",
        "@types/jest": "^26.0.23",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/node": "^8.10.66",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.0",
        "faker": "^5.5.3",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "sqlite3": "^5.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.5",
        "ts-node": "9.1.1",
        "typeorm-seeding": "^1.6.1",
        "typescript": "4.2.4"
    },
    "dependencies": {
        "argon2": "^0.27.2",
        "class-validator": "^0.13.1",
        "cors": "^2.8.5",
        "dotenv-safe": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "0.2.32"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
