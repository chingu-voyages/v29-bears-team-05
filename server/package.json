{
    "name": "keybound-server",
    "version": "0.0.1",
    "description": "API for keybound web app",
    "main": "index.js",
    "scripts": {
        "build-ts": "tsc",
        "start": "npm run serve",
        "serve": "node dist/index.js",
        "dev": "nodemon --exec ts-node src/index.ts",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "type-check": "tsc --pretty --noEmit",
        "format": "prettier --ignore-path .gitignore --write .",
        "lint": "eslint . --ignore-path .gitignore --fix --ext ts --ext tsx --ext js",
        "test": "NODE_ENV=test jest --watch --testPathPattern=src/tests",
        "test-all": "npm run lint && npm run type-check && npm run test",
        "postinstall": "npm run build-ts",
        "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
        "migrate:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate",
        "migrate:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
        "schema:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop",
        "schema:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
        "schema:log": "ts-node ./node_modules/typeorm/cli.js schema:log",
        "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed -s CreateVSCheatsheet",
        "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config",
        "db:setup": "npm run schema:drop && npm run migrate:run && npm run seed:run"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "sqlite3": "^5.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.5"
    },
    "dependencies": {
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.23",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/lodash": "^4.14.168",
        "@types/node": "^8.10.66",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.0",
        "@types/faker": "^5.5.3",
        "argon2": "^0.27.2",
        "class-validator": "^0.13.1",
        "cors": "^2.8.5",
        "dotenv-safe": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "pg": "^8.6.0",
        "reflect-metadata": "^0.1.13",
        "ts-node": "9.1.1",
        "typeorm": "0.2.32",
        "typescript": "4.2.4",
        "typeorm-seeding": "^1.6.1",
        "faker": "^5.5.3"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}