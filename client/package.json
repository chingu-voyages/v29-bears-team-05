{
    "name": "my-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "type-check": "tsc --pretty --noEmit",
        "format": "prettier --write .",
        "lint": "eslint . --fix --ext ts --ext tsx --ext js",
        "test": "jest",
        "test-all": "npm run lint && npm run type-check && npm run test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run type-check"
        }
    },
    "lint-staged": {
        "*.@(ts|tsx)": [
            "npm run lint",
            "npm run format"
        ]
    },
    "dependencies": {
        "date-fns": "^2.11.1",
        "formik": "^2.2.6",
        "gray-matter": "^4.0.2",
        "lodash": "^4.17.21",
        "next": "^10.0.0",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "remark": "^12.0.0",
        "remark-html": "^12.0.0",
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "@types/node": "^14.14.37",
        "@types/react": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "autoprefixer": "^10.2.5",
        "eslint": "^7.24.0",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "postcss": "^8.2.10",
        "tailwindcss": "^2.1.1",
        "typescript": "^4.2.4"
    }
}
